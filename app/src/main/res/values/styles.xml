<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightPurple</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!--Light Theme-->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lightPurple</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:statusBarColor">@color/aqua</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">@color/aqua</item>
        <item name="android:windowBackground">@color/aqua</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <!--Dark Theme-->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lightPurple</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:statusBarColor">@color/darkGrey</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">@color/darkGrey</item>
        <item name="android:windowBackground">@color/darkGrey</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <!-- Text styles -->
    <style name="SplashText">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearanceHeading">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAQIScale">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/InfoBottomSheetStyle</item>
    </style>

    <style name="InfoBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <!--Animations-->

    <style name="DialogAnimation">
<!--        <item name="android:windowEnterAnimation">@anim/slide_up_fade</item>-->
<!--        <item name="android:windowExitAnimation">@anim/slide_down_fade</item>-->
    </style>
</resources>
